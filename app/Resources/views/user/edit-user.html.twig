{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-8">
        <h1>Edit {{ user.username }}</h1>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.username, 'Username') }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
        </div>


        <div class="form-group">
            {{ form_label(form.email, 'User Email') }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.user_roles, 'User Role') }}
            {{ form_errors(form.user_roles) }}
            {{ form_widget(form.user_roles, {'attr': {'class': 'form-control'}, 'value': role}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.firstName, 'First Name') }}
            {{ form_errors(form.firstName) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.lastName, 'Last Name') }}
            {{ form_errors(form.lastName) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.plainPassword) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
        </div>

        <div class="form-group">
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm Password'}}) }}
        </div>

        <div>
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
    <div class="col-md-4">

    </div>
</div>

{% endblock %}