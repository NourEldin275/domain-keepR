{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.ticketReference) }}
        {{ form_errors(form.ticketReference) }}
        {{ form_widget(form.ticketReference, {'attr': {'class': 'form-control', 'placeholder': 'N/a'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.dateCreated) }}
        {{ form_errors(form.dateCreated) }}
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            {{ form_widget(form.dateCreated.date, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6 form-group">
            {{ form_widget(form.dateCreated.time, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.status) }}
        {{ form_errors(form.status) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Save Issue'}) }}
    </div>

{{ form_end(form) }}