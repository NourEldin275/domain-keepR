{# Customizing Error Display #}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>

                {% for error in errors %}
                    {{ error.message }}
                    <br>
                {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
