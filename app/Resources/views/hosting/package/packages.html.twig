{% extends 'base.html.twig' %}

{% block title %}All Hosting Packages{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-4"><h1><span class="glyphicon glyphicon-hdd big-glyphicon" aria-hidden="true"></span> All Hosting Packages</h1></div>
        <div class="col-xs-2"><a class="btn btn-default" href="{{ url('add_new_hosting_package') }}" role="button">Add new</a></div>
        <div class="col-xs-6"></div>
    </div>

    {% if packages is not empty %}
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>Package Name</th>
                <th>Space (GBs)</th>
                <th>Fees</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for package in packages %}

                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ package.name }}</td>
                    <td>{{ package.space }} GBs</td>
                    <td>{{ package.fees }}</td>
                    <td>
                        <a href="{{ url('edit_hosting_package', {'package': package.id}) }}" class="btn btn-warning">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
                        </a>
                        <a href="{{ url('delete_hosting_package', {'package': package.id}) }}" class="btn btn-danger">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>

    {% else %}
        <h4>No records found.</h4>
    {% endif %}
{% endblock %}