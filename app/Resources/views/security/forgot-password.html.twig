{% extends 'logged-out.html.twig' %}

{% block title %}Forgot your password{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Enter your email to reset your password</h2>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_errors(form.email) }}
                    {{ form_label(form.email, 'Your Email Address') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Reset Password'}) }}
            {{ form_end(form) }}
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}